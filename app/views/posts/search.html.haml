.post-search.individual-page
  .post-search__head.individual-page__head
    .post-search__head__contents.individual-page__head__contents
      = icon 'fas', 'camera-retro', class: 'search-icon'
      - if @genders || @length || @minage || @maxage || @salon || @item || @keyword
        %span
          - if @genders
            - @genders.each do |gender|
              #{gender.name},
          - if @length
            #{@length.name},
          - if @minage
            #{@minage}才〜,
          - if @maxage
            〜#{@maxage}才,
          - if @salon
            #{@salon.name},
          - if @item
            #{@item.name},
          - if @keyword
            『 #{@keyword} 』
          の検索結果
      - else
        %span スタイル一覧
  .post-search__contents
    = render 'shared/postsearchbox'
    .post-search__contents__main
      .post-search__contents__main__count
        = @postsCount
        %span 件
      .post-search__contents__main__posts
        = render @posts
      = paginate @posts