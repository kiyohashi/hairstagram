.item-search.individual-page
  .item-search__head.individual-page__head
    .item-search__head__contents.individual-page__head__contents
      .item-search-icon
        = image_tag 'wax.png'
        - if @brandkeyword || @genre || @keyword
          %span
            - if @brandkeyword
              『 #{@brandkeyword} 』,
            - if @genre
              #{@genre.name},
            - if @keyword
              『 #{@keyword} 』
            の検索結果
        - else
          %span アイテム一覧
  .item-search__contents
    = render 'shared/itemsearchbox'
    .item-search__contents__main
      .item-search__contents__main__count
        - if @searchedItemsCount
          = @searchedItemsCount
        - else
          = @itemsallcount
        %span 件
      .item-search__contents__main__items
        - if @searcheditems
          = render partial: "item", collection: @searcheditems, as: "item" 
        - else
          = render @items
      - if @searcheditems
        = paginate @searcheditems
      - else    
        = paginate @items