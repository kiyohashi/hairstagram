= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'user-new individual-page') do |f|
  = render "devise/shared/error_messages", resource: resource
  .user-new__head.individual-page__head
    .user-new__head__contents.individual-page__head__contents
      %span Hair 新規会員登録
  .user-new__contents
    .user-new__contents__registration
      .user-new__contents__registration__head
        新規会員登録
      .user-new__contents__registration__name
        = f.text_field :name, autofocus: true, autocomplete: "name", placeholder: 'ユーザー名'
      .user-new__contents__registration__acountid
        = f.text_field :acountid, autofocus: true, autocomplete: "acountID", placeholder: 'Hair ID (半角英数)'
      .user-new__contents__registration__email
        = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'メールアドレス'
      .user-new__contents__registration__password
        = f.password_field :password, autocomplete: "new-password", placeholder: 'パスワード'
      .user-new__contents__registration__password-confirmation
        = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'パスワード(確認用)'
      
      .user-new__contents__registration__btn
        = f.submit "登録する"
= render "devise/shared/links"
