.sidebar__search.sidebar__content
  .sidebar__search__head.sidebar__content__head
    探す
  %ul.sidebar__search__list.sidebar__content__list
    %li.sidebar__search__list__style
      = link_to search_posts_path do
        = icon 'fas', 'camera-retro', class: 'search-icon'
        %span スタイルを探す
    %li.sidebar__search__list__salon
      = link_to search_salons_path do
        = icon 'fas', 'store-alt', class: 'search-icon'
        %span サロンを探す
    %li.sidebar__search__list__user
      = link_to search_users_path do
        = icon 'far', 'user', class: 'search-icon'
        %span ユーザーを探す
    %li.sidebar__search__list__item
      = link_to search_items_path do
        .search-icon
          = image_tag 'wax.png'
        %span アイテムを探す
.sidebar__favorite-salon.sidebar__content
  .sidebar__favorite-salon__head.sidebar__content__head
    人気サロン
  %ul.sidebar__favorite-salon__list.sidebar__content__list
    - @popularity_salons.each do |salon|
      %li
        = link_to salon_path(salon) do
          = salon_name(salon)
.sidebar__favorite-user.sidebar__content
  .sidebar__favorite-user__head.sidebar__content__head
    ユーザー
  %ul.sidebar__favorite-user__list.sidebar__content__list
    - @popularity_users.each do |user|
      %li
        = link_to user_path(user), class: "sidebar__favorite-user__list__user" do
          .sidebar__favorite-user__list__user__icon
            - if user.icon.url.present?
              = image_tag user.icon.url, size: '35x35'
            - else
              = image_tag 'egg-icon-gray.png', size: '35x35'
          .sidebar__favorite-user__list__user__right
            .sidebar__favorite-user__list__user__right__name
              = user.name
            .sidebar__favorite-user__list__user__right__follower
              %span フォロワー
              = user.followers.count
.sidebar__favorite-style.sidebar__content
  .sidebar__favorite-item__head.sidebar__content__head
    人気アイテム
  %ul.sidebar__favorite-item__list.sidebar__content__list
    - @popularity_items.each do |item|
      %li
        = link_to item.link do
          - if item.image_url == "?target=70x70" 
            = image_tag 'noimage.jpg', size: '35x35'
          - else
            = image_tag item.image_url, size: '35x35'
          = item.name