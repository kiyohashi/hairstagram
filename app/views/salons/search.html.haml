.salon-search.individual-page
  .salon-search__head.individual-page__head
    .salon-search__head__contents.individual-page__head__contents
      = icon 'fas', 'store-alt', class: ''
      - if @keyword && @area
        %span #{@area.name},『 #{@keyword} 』 の検索結果
      - elsif @keyword
        #{@keyword} の検索結果
      - elsif @area
        #{@area.name} の検索結果
      - else
        %span サロン一覧
  .salon-search__contents
    = render 'shared/salonsearchbox' do
      .salon-search__contents
        エリア
    .salon-search__contents__main
      .salon-search__contents__main__count
        - if @searchedSalonsCount
          = @searchedSalonsCount
        - else
          = @salonsallcount
        %span 件
      .salons
        - if @searchedsalons
          = render partial: "salon", collection: @searchedsalons, as: "salon" 
        - else
          = render @salons
      - if @searchedsalons
        = paginate @searchedsalons
      - else
        = paginate @salons