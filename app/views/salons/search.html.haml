.salon-search.individual-page
  = render 'shared/search-header'
  .salon-search__head.individual-page__head
    .salon-search__head__contents.individual-page__head__contents
      = icon 'fas', 'store-alt', class: ''
      - if @keyword && @area
        %span #{@area.name},『 #{@keyword} 』 の検索結果
      - elsif @keyword
        #{@keyword} の検索結果
      - elsif @area
        #{@area.name} の検索結果
      - else
        %span サロン一覧
  .salon-search__contents
    = render 'shared/salonsearchbox'
    .salon-search__contents__main
      .salon-search__contents__main__count
        = @salonscount
        %span 件
      .salons
        = render @salons
      = paginate @salons